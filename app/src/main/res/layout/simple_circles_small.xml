<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <Button
        android:id="@+id/bt_tutorial_login"
        android:layout_width="73dp"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="9dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/ll_contact_friend_selector"
        android:text="로그인"
        android:textColor="#ffffff"
        android:textSize="11sp"
        android:visibility="gone" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:background="@drawable/wordqwest_confirm_btn"
            android:text="확인" />
    </LinearLayout>

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="92dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:visibility="gone" />

    <!--
         <Button
            android:id="@+id/bt_tutorial_next"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="27dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="9dp"
            android:text="카카오톡 로그인"/>
    -->

    <com.kakao.widget.LoginButton
        android:id="@+id/bt_tutorial_next"
        android:layout_width="fill_parent"
        android:layout_height="59dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="9dp"
        android:visibility="gone" />

   

</RelativeLayout>