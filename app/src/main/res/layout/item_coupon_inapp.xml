<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:gravity="center"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/cb_coupon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:button="@drawable/radiobuttonselector"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <LinearLayout
        android:id="@+id/ll_item_coupon"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/bg_purchase_coupon_blue_ready"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:src="@drawable/icn_purchase_coupon_launching" 
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_horizontal"
            android:text="런칭기뇸"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:gravity="right">

            <TextView
                android:id="@+id/tv_coupon_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_horizontal"
                android:text="2015-05-03까지"
                android:textColor="#aaffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_coupon_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_horizontal"
                android:text="이거 엄청 좋은쿠폰임"
                android:textColor="#aaffffff"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textSize="12sp" 
                android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>