<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.5"
        android:background="#000000" >
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="0"
            android:background="@drawable/popup_box"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/grade_img"
                    android:layout_width="92dp"
                    android:layout_height="103dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:paddingBottom="23dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/grade_name_tv"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="4dp"
                        android:layout_height="wrap_content"
                        android:text="적중 필수 1 단어장"
                        android:textColor="#2f6e9b"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/progress_gauge"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="5"
                            android:background="#2f6e9a" />

                        <TextView
                            android:id="@+id/background_gauge"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="5"
                            android:background="#757575" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/grade_word_tv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="000/000"
                        android:textColor="#8a000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            
            <View 
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#98b6cd"
                android:alpha="0.5"/>

            <TextView
                android:id="@+id/grade_explain_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:gravity="left"
                android:text="aaaaaaaaaaaaaaa\naaaaaaaaaaaaaaaaa\naaaaaaaaaaa"
                android:textColor="#8a000000"
                android:textSize="12sp" />

            <Button
                android:id="@+id/select_btn"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginTop="21dp"
                android:background="@drawable/bluebutton"
                android:gravity="center"
                android:text="이 단어장으로 변경"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/close_btn"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/selectbutton_targetpage_closebutton"
                android:gravity="center"
                android:text="닫기"
                android:textColor="#8a000000"
                android:textSize="14sp" />
        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>