<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".tutorial.InAppPurchaseActivity" >

    <ScrollView
        android:id="@+id/sc_inapp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_purchase_full"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_inapp_day_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="하루 50원으로 수능 영단어 마스터하세요!"
                android:textColor="#757575"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_purchase_select"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="M A S T E R   V E R S I O N"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="모의고사 + EBS + 수능 분석 및 단어 실시간 업데이트, 망각곡선 측정 + 자동 복습시스템 + 원어민 발음 지원"
                    android:textColor="#757575"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/ll_inapp_first"
                    android:layout_width="fill_parent"
                    android:layout_height="72dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="112dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_purchase_yellow_a"
                        android:gravity="center|right"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|bottom" >

                            <TextView
                                android:id="@+id/tv_inapp_first_period"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textColor="#ffffff"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="개월"
                                android:textColor="#ffffff"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_inapp_auto_text_first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*월 자동결제"
                            android:textColor="#ffffff"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="72dp"
                        android:background="@drawable/btn_purchase_yellow_b"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_inapp_first_expensive_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|left"
                            android:background="@drawable/bg_purchase_beforefee"
                            android:text="29,400"
                            android:textColor="#cccccc"
                            android:textSize="16sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_inapp_first_sale_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="4,900"
                            android:textColor="#4d4d4d"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginTop="4dp"
                            android:text="원"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_inapp_second"
                    android:layout_width="fill_parent"
                    android:layout_height="72dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="112dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_purchase_blue_a"
                        android:gravity="center|right"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|bottom" >

                            <TextView
                                android:id="@+id/tv_inapp_second_period"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6"
                                android:textColor="#ffffff"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="개월"
                                android:textColor="#ffffff"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_inapp_auto_text_second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*월 자동결제"
                            android:textColor="#ffffff"
                            android:textSize="10sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="72dp"
                        android:background="@drawable/btn_purchase_blue_b"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_inapp_second_expensive_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|left"
                            android:background="@drawable/bg_purchase_beforefee"
                            android:text="29,400"
                            android:textColor="#cccccc"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_inapp_second_sale_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="24,900"
                            android:textColor="#4d4d4d"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginTop="4dp"
                            android:text="원"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_inapp_third"
                    android:layout_width="fill_parent"
                    android:layout_height="72dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="112dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_purchase_red_a"
                        android:gravity="center|right"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|bottom" >

                            <TextView
                                android:id="@+id/tv_inapp_third_period"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textColor="#ffffff"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="개월"
                                android:textColor="#ffffff"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_inapp_auto_text_third"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*월 자동결제"
                            android:textColor="#ffffff"
                            android:textSize="10sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="72dp"
                        android:background="@drawable/btn_purchase_red_b"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_inapp_third_expensive_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|left"
                            android:background="@drawable/bg_purchase_beforefee"
                            android:text="58,500"
                            android:textColor="#cccccc"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_inapp_third_sale_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="39,000"
                            android:textColor="#4d4d4d"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginTop="4dp"
                            android:text="원"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="20dp"
                android:text="결제 과정에 문제가 있으신가요?"
                android:textColor="#757575"
                android:textSize="14sp" />

            <Button
                android:id="@+id/bt_inapp_call"
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/wordqwest_confirm_btn"
                android:text="상담전화 (02-743-8838)"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="8dp"
                android:text="평일 09:30~18:00, 점심시간:12:00~13:00\n토, 일 공휴일 휴무"
                android:textColor="#212121"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/pb_inapp_loading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="visible" />

</RelativeLayout>