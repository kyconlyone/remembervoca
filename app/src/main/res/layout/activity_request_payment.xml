<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_tuto_pay_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/payment_bg">
    
    
    <LinearLayout
        android:id="@+id/ll_tuto_pay1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_tuto_end"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="244dp"
            android:layout_height="250dp" >

            <ImageView
                android:id="@+id/iv_tuto_pay1_complete"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/img_tuto_complete" />

            <ImageView
                android:id="@+id/iv_tuto_pay1_profile"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_alignBottom="@id/iv_tuto_pay1_complete"
                android:layout_centerHorizontal="true"
                android:layout_margin="36dp"
                android:src="@drawable/profile" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_tuto_pay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="이제 김기훈님의\n영단어 마스터를 위한 준비가\n끝났습니다."
            android:textColor="#8A000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/bt_tuto_pay1"
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:background="@drawable/willqwest_confirm_btn"
            android:text="확인"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tuto_pay2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_purchase_top" 
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView 
                android:id="@+id/tv_pay2_top_price"
                android:layout_width="300dp"
                android:layout_height="52dp"
                android:background="@drawable/img_purchase_month"
                android:text="1개월 \u20A94,900"
                android:textColor="#3B1E1E"
                android:textSize="20sp"
                android:gravity="center|bottom"
                android:paddingBottom="10dp"/>
            <ImageView
                android:id="@+id/iv_pay2_top"
                android:layout_width="300dp"
                android:layout_height="222dp"
                android:src="@drawable/img_purchase_kakao_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_purchase_bottom"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bt_tuto_pay2_kakao"
                android:layout_width="fill_parent"
                android:layout_height="84dp"
                android:background="@drawable/btn_purchase_kakao" />

            <Button
                android:id="@+id/bt_tuto_pay2_purchase"
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:background="@drawable/willqwest_confirm_btn"
                android:text="지금 결제하기"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <Button 
            android:id="@+id/bt_tuto_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="left"
            android:background="@drawable/btn_purchase_secession"
            android:textColor="#cccccc"
            android:textSize="14sp"
            android:layout_marginLeft="16dp"
            android:text="회원 탈퇴"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_request_payment"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>