<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="38dp"
        android:paddingLeft="35dp"
        android:paddingRight="23dp"
        android:paddingTop="38dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_myinfo_picture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="18dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/et_my_name"
                    android:layout_width="match_parent"
                    android:layout_height="19.5dp"
                    android:layout_gravity="left|bottom"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="31dp"
                    android:background="@drawable/my_setting_line"
                    android:gravity="bottom"
                    android:hint="@string/hint_firstname"
                    android:inputType="text"
                    android:textColor="#de000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="22dp"
                    android:background="#000000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="18dp"
                android:gravity="bottom|right"
                android:paddingBottom="7dp"
                android:text="생년월일"
                android:textColor="#8a000000"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/et_my_birth"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/my_setting_line"
                    android:gravity="bottom|left"
                    android:hint="@string/hint_birth"
                    android:inputType="number"
                    android:textColor="#de000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#000000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="18dp"
                android:background="@drawable/my_setting_line"
                android:gravity="bottom|right"
                android:paddingBottom="7dp"
                android:text="재학중인 학교"
                android:textColor="#8a000000"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/et_my_school"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/my_setting_line"
                    android:gravity="bottom|left"
                    android:hint="@string/hint_school"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="#de000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#000000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="18dp"
                android:gravity="bottom|right"
                android:paddingBottom="7dp"
                android:text="이메일"
                android:textColor="#8a000000"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/et_my_email"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/my_setting_line"
                    android:gravity="bottom|left"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:textColor="#de000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#000000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="18dp"
                android:gravity="bottom|right"
                android:paddingBottom="7dp"
                android:text="예상 등급"
                android:textColor="#8a000000"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_my_grade"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/my_setting_line"
                    android:gravity="bottom|left"
                    android:hint="등급"
                    android:textColor="#de000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#000000" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/bt_change"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="46dp"
            android:background="@drawable/button_profilepage_confirmbutton_normal"
            android:clickable="false"
            android:gravity="center"
            android:text="수정 완료"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_edit_logout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_profilepage_logoutbutton_normal"
            android:clickable="false"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/label_logout_confirm"
            android:textColor="#8a000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bt_secession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="144dp"
            android:background="#ffffff"
            android:clickable="false"
            android:gravity="center"
            android:text="밀당 영단어 탈퇴하기"
            android:textColor="#3d000000"
            android:textSize="14sp" />
    </LinearLayout>

</ScrollView>