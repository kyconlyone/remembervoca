<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp" >

        <LinearLayout
            android:id="@+id/ll_intropage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/iv_intropage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:src="@drawable/loginsuccess_icon" />

            <TextView
                android:id="@+id/tv_intropage_contents"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="105dp"
                android:gravity="center_horizontal"
                android:text="이제 &apos;김기훈&apos;님만의\n암기 시스템을\n설치하겠습니다."
                android:textColor="#8a000000"
                android:lineSpacingExtra="20dp"
                android:textSize="18sp"/>

            <org.andlib.ui.CircleAnimationView
                android:id="@+id/bt_intropage_confirm"
                android:layout_width="242dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="82dp"
                android:background="#2f6e9b"
                android:text="시스템 인스톨 시작" />

            <LinearLayout
                android:id="@+id/ll_intropage_not_use_cellular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="46dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/informationcon" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:layout_marginLeft="1dp"
                    android:text="설치 시 데이터를 사용하지 않습니다."
                    android:textColor="#3d000000"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_progress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="359dp"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:alpha="0.54"
                android:gravity="right"
                android:text="0%"
                android:textColor="#702f6e9b"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll_progress_back"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:alpha="0.04"
                    android:background="#000000"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_progress_gauge"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:alpha="0.54"
                    android:background="#000000"
                    android:orientation="horizontal"
                    android:visibility="invisible" >
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_page_backward_bg"
            android:layout_width="fill_parent"
            android:layout_height="256dp"
            android:layout_marginTop="92dp"
            android:background="@drawable/feed_main_bg"
            android:orientation="vertical"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:paddingTop="47dp"
            android:visibility="invisible" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_page1"
            android:layout_width="fill_parent"
            android:layout_height="256dp"
            android:layout_marginTop="92dp"
            android:orientation="vertical"
            android:paddingBottom="11dp"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:paddingTop="47dp"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/tv_page1_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:gravity="center_horizontal"
                android:text="SYSTEM VERSION"
                android:textColor="#8a000000"
                android:textSize="14sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_page1_contents"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center_horizontal"
                android:text="Ver. 2.0"
                android:textColor="#e1aa25"
                android:textSize="31sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <View
                android:id="@+id/dv_page1_divider"
                android:layout_width="202dp"
                android:layout_height="1px"
                android:layout_marginTop="33dp"
                android:background="#d9dae0"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_page1_ongoing"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:gravity="center_horizontal"
                android:text="암기 시스템을 설치중입니다."
                android:textColor="#70000000"
                android:textSize="11sp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_page2"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_marginTop="92dp"
            android:orientation="vertical"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:paddingTop="47dp"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/tv_page2_finish"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="75dp"
                android:layout_marginTop="33dp"
                android:gravity="center_horizontal"
                android:text="시스템\n설치 완료!"
                android:textColor="#ea4e37"
                android:textSize="31sp"
                android:textStyle="bold"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_page3"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_marginTop="92dp"
            android:orientation="vertical"
            android:paddingBottom="11dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="47dp"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/tv_page3_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="&apos;김기훈&apos;님 만의\n시스템 이름을 입력해 주세요!"
                android:textColor="#8a000000"
                android:textSize="12sp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/et_page3_systemname"
                android:layout_width="165dp"
                android:layout_height="29dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="23dp"
                android:background="@drawable/blank_name_popup"
                android:gravity="center"
                android:hint="이름 입력"
                android:inputType="text"
                android:textColor="#ea4e37"
                android:textColorHint="#3d000000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <org.andlib.ui.CircleAnimationView
                android:id="@+id/bt_page3_confirm"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/redbutton"
                android:text="시스템 이름 입력"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_page4"
            android:layout_width="match_parent"
            android:layout_height="294dp"
            android:layout_marginTop="92dp"
            android:orientation="vertical"
            android:paddingBottom="29dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="47dp"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/tv_page4_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="안녕하세요. 김기훈님\n허니버터칩 입니다!"
                android:textColor="#e1aa25"
                android:textSize="18sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_page4_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:gravity="center_horizontal"
                android:text="시스템들을 김기훈님에게 맞추기 위해서\n몇가지 정보가 필요합니다.\n입력해주실거죠?"
                android:textColor="#8a000000"
                android:textSize="12sp"
                android:lineSpacingExtra="4dp"
                android:visibility="invisible" />

            <org.andlib.ui.CircleAnimationView
                android:id="@+id/bt_page4_confirm"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="23dp"
                android:layout_marginRight="11dp"
                android:layout_marginLeft="11dp"
                android:background="@drawable/redbutton"
                android:text="맞춤 정보 입력"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_page5"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:layout_marginTop="51dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="23dp"
            android:visibility="invisible" >

            <LinearLayout
                android:id="@+id/ll_page5_signin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
	            android:paddingLeft="20dp"
	            android:paddingRight="20dp"
                android:orientation="vertical"
                android:visibility="invisible" >

                <TextView
                    android:id="@+id/tv_page5_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="이름"
                    android:textColor="#2f6e9b"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/et_page5_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:inputType="text"
                    android:hint="이름"
                    android:textColor="#8a000000"
                    android:textSize="12sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="6dp"
                    android:background="#1E000000" />

                <TextView
                    android:id="@+id/tv_page5_school"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="재학중인 학교"
                    android:textColor="#2f6e9b"
                    android:textSize="10sp"  />

                <EditText
                    android:id="@+id/et_page5_school"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:inputType="text"
                    android:hint="학교 이름"
                    android:textColor="#8a000000"
                    android:textSize="12sp"  />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="6dp"
                    android:background="#1E000000" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_page5_birth"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="생년월일"
                            android:textColor="#2f6e9b"
                    		android:textSize="10sp" />

                        <EditText
                            android:id="@+id/et_page5_birth"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@null"
                            android:hint="예) 960815"
                            android:inputType="number"
                            android:textColor="#8a000000"
                    		android:textSize="12sp"  />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_page5_grade"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="모의고사 등급"
                            android:textColor="#2f6e9b"
              			    android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_page5_grade_input"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="등급 입력"
                            android:textColor="#2f6e9b"
                    		android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp" >

                    <View
                        android:layout_width="82dp"
                        android:layout_height="0.5dp"
                        android:background="#1E000000" />

                    <View
                        android:layout_width="113dp"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="22dp"
                        android:background="#1E000000" />
                </LinearLayout>
                
                <TextView
                    android:id="@+id/tv_page5_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="이메일"
                    android:textColor="#2f6e9b"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/et_page5_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:hint="이메일"
                    android:inputType="textEmailAddress"
                    android:textColor="#8a000000"
                    android:textSize="12sp"  />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="6dp"
                    android:background="#1E000000" />

                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/checkbutton_background"
                    android:layout_marginTop="9dp" 
                    android:gravity="center"         
                    android:orientation="vertical">
                    
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <CheckBox
                            android:id="@+id/cb_utilization"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_centerVertical="true"
                            android:button="@drawable/radiobuttonselector"
                            android:checked="false" 
                      		android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/tv_utilization"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/cb_utilization"
                            android:text="이용 약관에 동의 합니다."
                            android:textColor="#8a000000"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cb_collection"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_centerVertical="true"
                            android:button="@drawable/radiobuttonselector"
                            android:checked="false" 
                      		android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/tv_collection"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/cb_collection"
                            android:text="개인 정보수집에 동의 합니다."
                            android:textColor="#8a000000"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <org.andlib.ui.CircleAnimationView
                android:id="@+id/bt_page5_signin"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/redbutton"
                android:text="맞춤 정보 입력"
                android:visibility="invisible" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_page6"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="108dp"
            android:paddingBottom="29dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="47dp"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/tv_page6_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="47dp"
                android:gravity="center"
                android:text="고1 이시네요!"
                android:textColor="#2f6e9b"
                android:textSize="31sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_page6_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="82dp"
                android:background="@null"
                android:gravity="center_horizontal"
                android:text="고1이 되었을 땐\n단어가 시간 잡어먹을 일이 없도록\n제가 책임지겠습니다."
                android:textColor="#8a000000"
                android:textSize="12sp"
                android:lineSpacingExtra="1dp"
                android:visibility="invisible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="33dp"
            android:visibility="visible" >

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <org.andlib.ui.CircleAnimationView
                android:id="@+id/bt_page6_confirm"
                android:layout_width="242dp"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:background="@drawable/bluebutton"
                android:gravity="center"
                android:text="그럼 시작해볼까요?"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:visibility="invisible" />

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/notice_data"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="27dp"
            android:gravity="center"
            android:text="설치 시 이동 통신 데이터를 사용하지 않습니다."
            android:textColor="#282f6e9b"
            android:textSize="11sp"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/ll_page_backward_picture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="77dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:background="@drawable/circle" >

                <ImageView
                    android:id="@+id/iv_page_backward_picture"
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:padding="1dp"
                    android:src="@drawable/profile"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="77dp"
                android:layout_weight="1" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_page_backward_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62dp"
            android:visibility="gone" >

            <ImageView
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/shape_circle_white" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/shape_circle_brown" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_info_input_finish"
            android:layout_width="fill_parent"
            android:layout_height="26dp"
            android:layout_marginTop="41dp"
            android:visibility="invisible" >

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="160dp"
                android:layout_height="26dp"
                android:background="@drawable/informationisputted"
                android:gravity="center"/>

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>