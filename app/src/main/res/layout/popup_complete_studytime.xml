<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#88000000"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_complete_studytime_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_achieve_todaygoal_top"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_complete_studytime_title"
                    android:layout_width="fill_parent"
                    android:layout_height="72dp"
                    android:background="@drawable/bg_achieve_title"
                    android:gravity="center"
                    android:text="김민지님의\n첫 학습목표 달성을 축하드립니다."
                    android:textColor="#e94f37"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="268dp"
                    android:layout_height="108dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_achieve_todaygoal_mypic" >

                    <ImageView
                        android:id="@+id/iv_complete_studytime_pic"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="23dp"
                        android:src="@drawable/profile" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_complete_studytime_totalcount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="8dp"
                    android:text="완료한 학생은 몇명이고 어쩌고 저쩌고\n수치 관련 이야기가 여기에 들어감"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_purchase_bottom"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_complete_studytime1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="8dp"
                    android:text="처음에 약속했던 학습목표를 달성해 주셔서\n감사합니다. 저희는 불타는 의지를 가진\n김기훈님 같은 학생 덕분에 가장 큰 보람을\n느끼고 있습니다." />

                <Button
                    android:id="@+id/bt_complete_studytime1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/willqwest_confirm_btn"
                    android:text="확 인"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_complete_studytime_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tuto_end"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="218dp"
                android:layout_height="132dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/img_coupon_red"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_complete_studytime_discounttitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_horizontal"
                    android:text="의지 있는 학생할인 쿠폰"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_complete_studytime_discount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="20% 할인"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_complete_studytime2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24sp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="8dp"
                android:text="감사의 의미로 김기훈님께 밀당영단어 20%\n할인 혜택을 드립니다. 작심사일로 끝나지\n않고 앞으로도 열심히 학습하셔서 원하는\n대학에 합격화시길 바랄꼐요^^"
                android:textColor="#757575"
                android:textSize="14sp" />

            <Button
                android:id="@+id/bt_complete_studytime2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/willqwest_confirm_btn"
                android:text="할인권 지금 사용하기"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />
          
        </LinearLayout>
    </LinearLayout>

</LinearLayout>