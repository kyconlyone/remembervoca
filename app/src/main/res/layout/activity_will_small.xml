<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EA4E37"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/card_basic"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="16dp" >

                <TextView
                    android:id="@+id/will_noticeTv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="김민지님의 최근 1주일\n목표 달성률은 88%입니다."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ea4e37"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/will_noticeTv2"
                    android:layout_width="fill_parent"
                    android:layout_height="77dp"
                    android:background="@drawable/feed_coach_grey"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_marginTop="12dp"
                    android:textColor="#555555"
                    android:gravity="left|center_vertical"
                    android:text="블라블라블라블라블라블라블라블라블라블라블라블라블라블라블라블라블라블라블라블라블라블라블라블라" />

                <TextView
                    android:id="@+id/more_info"
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="12dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="더 보기"
                    android:textColor="#ea4e37"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/card_basic"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="49dp" 
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/week_average"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/will_avg_btn_on_left"                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="지난 7일 평균"
                    android:textColor="#ea4e37"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/month_average"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/will_avg_btn_right"
                    android:gravity="center"
                    android:text="지난 28일 평균"
                    android:textColor="#8a000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="22dp" >

                <LinearLayout
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_my_average"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="22분"
                        android:textColor="#ea4e37"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:gravity="center"
                        android:text="나의 전체\n사용 평균"
                        android:textColor="#8a000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:background="#EBEBEB" >
                </TextView>

                <LinearLayout
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_user_group_average"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="35분"
                        android:textColor="#de000000"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_user_group"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:gravity="center"
                        android:text="0학년 0급\n단어장 사용자"
                        android:textColor="#8a000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:background="#EBEBEB" >
                </TextView>

                <LinearLayout
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_grade_average"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="19분"
                        android:textColor="#de000000"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_grade_group"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:gravity="center"
                        android:text="0학년\n전체"
                        android:textColor="#8a000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_marginRight="13dp"
                android:layout_marginTop="11dp"
                android:text="기간별 학습 시간 평균 (단위 : 분)"
                android:textColor="#3d000000"
                android:textSize="11sp" >
            </TextView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="11dp"
                android:background="#EBEBEB" >
            </TextView>

            <TextView
                android:id="@+id/tv_current_goal_time"
                android:layout_width="fill_parent"
                android:layout_height="49dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="현재 목표시간 15분"
                android:textColor="#8a000000"
                android:textSize="12sp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="620dp"
            android:background="@drawable/will_calendar_back"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/calendar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/day1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/card_basic"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/goal_timeTv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="현재 목표시간"
                android:textColor="#8a000000"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/goal_time_min_Tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="3dp"
                android:gravity="right"
                android:text="매일매일 15분"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ea4e37"
                android:textSize="22sp" />

            <Button
                android:id="@+id/bt_will_settime"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/card_btn"
                android:text="목표 수정"
                android:textColor="#8a000000"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:background="#C76B5E"
            android:orientation="vertical"
            android:padding="22dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/will_pushTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="의지관련 푸쉬"
                    android:textColor="#8affffff"
                    android:textSize="12sp" />

                <ToggleButton
                    android:id="@+id/will_pushBtn"
                    android:layout_width="59dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:background="@drawable/onbutton"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#B65A4D" >
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/block_kakaoTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="카카오톡 차단"
                    android:textColor="#8affffff"
                    android:textSize="12sp" />

                <ToggleButton
                    android:id="@+id/block_kakaoBtn"
                    android:layout_width="59dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:background="@drawable/onbutton"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#B65A4D" >
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/accumulate_use_timeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="전체 누적 사용시간"
                    android:textColor="#8affffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/accumulate_use_time_countTv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="4h 33min"
                    android:textColor="#deffffff"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#B65A4D" >
            </TextView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:gravity="center_vertical"
                android:text="밀당 영단어의 하루 사용시간은\n매일 오전 02:30을 기준으로 측정하고 있습니다."
                android:textColor="#8a000000"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>