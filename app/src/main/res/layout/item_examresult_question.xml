<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="6dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_examquestion_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="1. test"
            android:textColor="#316f9b"
            android:textSize="18sp" />
        
        <TextView
            android:id="@+id/text_examquestion_question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text=""
            android:textColor="#316f9b"
            android:textSize="18sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/text_examquestion_frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="#316f9b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_examquestion_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="#316f9b"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/text_examquestion_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_examquestion_example1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/border_example_default"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="보기1"
        android:textColor="#316f9b"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_examquestion_example2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/border_example_default"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="보기2"
        android:textColor="#316f9b"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_examquestion_example3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/border_example_default"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="보기3"
        android:textColor="#316f9b"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_examquestion_example4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:background="@drawable/border_example_default"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="보기4"
        android:textColor="#316f9b"
        android:textSize="14sp" />

</LinearLayout>