<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="9dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="366dp" >

            <TextView
                android:id="@+id/tv_feedback_lv"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:text="LV 4"
                android:textSize="23sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="47dp"
                android:src="@drawable/icon96" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:textSize="32sp"
                        android:text="2014.3.20" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="김영철"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="32sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:text="님의"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_feedback_invite"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="top|right"
            android:layout_weight="1"
            android:src="@drawable/icon96" />

        <ImageView
            android:id="@+id/iv_feedback_help"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="top|right"
            android:layout_weight="1"
            android:src="@drawable/icon96" />

        <ImageView
            android:id="@+id/iv_feedback_setting"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="top|right"
            android:layout_weight="1"
            android:src="@drawable/icon96" />

        <LinearLayout
            android:id="@+id/ll_testfeed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="4dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="9dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="13dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="101dp"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:text="오늘 복습한단어" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/main_cell_forget" />

                    <LinearLayout
                        android:id="@+id/ll_feedback_current_review"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_feedback_today_rewind"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="right"
                            android:gravity="center_vertical|right"
                            android:text="135"
                            android:textColor="#aaff0000" />

                        <TextView
                            android:id="@+id/tv_feedback_today_total"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="right"
                            android:gravity="center_vertical|right"
                            android:text="/250" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="101dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:gravity="center_vertical"
                        android:text="살려는 드릴께" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_feedback_current_newstudy"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="right"
                            android:gravity="center_vertical|right"
                            android:text="135" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:background="#ffffff" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="9dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="138dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="92dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:gravity="center_vertical"
                        android:text="총 학습량"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_feedback_total_study"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:gravity="center_vertical|right"
                        android:text="1250"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="138dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="92dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:gravity="center_vertical"
                        android:text="현재 모르는 단어"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_feedback_current_unknown"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:gravity="center_vertical|right"
                        android:text="1024"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="138dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="92dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:gravity="center_vertical"
                        android:text="학습 대기 단어"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_feedback_ready_study"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:gravity="center_vertical|right"
                        android:text="226"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="138dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="92dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:gravity="center_vertical"
                        android:text="현재 외운단어"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_feedback_remember_word"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:gravity="center_vertical|right"
                        android:text="226"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingLeft="23dp"
                android:paddingRight="18dp"
                android:paddingTop="9dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="92dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        android:text="완전히 외운 단어"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="92dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        android:text="망각확률 높은 단어"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_feedback_perfect_remember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="center_vertical|right"
                        android:text="226"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_feedback_potential_forget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="center_vertical|right"
                        android:text="226"
                        android:textSize="11sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_show_remeber_word"
                    android:layout_width="36dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="9dp"
                    android:layout_weight="1"
                    android:background="#88ffffff"
                    android:src="@drawable/icon48" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>